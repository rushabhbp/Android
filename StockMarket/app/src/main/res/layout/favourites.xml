<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="220px"
        android:layout_height="50px"
        android:text="symbol"
        android:textSize="40px"
        android:id="@+id/favsymbol"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="30px"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/favname"
        android:layout_below="@+id/favsymbol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/favsymbol"
        android:layout_alignEnd="@+id/favsymbol" />

    <TextView
        android:layout_width="110px"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="30px"
        android:paddingRight="3px"
        android:id="@+id/favprice"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/favsymbol"
        android:layout_above="@+id/favname" />

       <TextView android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="change"
        android:id="@+id/favchange"
        android:textSize="30px"
           android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/favprice"
        android:layout_toEndOf="@+id/favprice" />

    <TextView
        android:layout_width="200px"
        android:layout_height="30px"
        android:text="marketcap"
        android:textAlignment="textStart"
        android:id="@+id/favcap"
        android:layout_below="@+id/favprice"
        android:layout_toRightOf="@+id/favsymbol"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
